<%= form_for([@category,@category.posts.build]) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  
  <div class="field">
    <%= f.label :author_id %><br>
        <%= select_tag "post[author_id]", options_for_select(Author.all.map { |author| [author.first_name, author.id]}) %>
  </div>

     <div class="field">
      <%= f.label :category_id %><br>
        <%= select_tag "post[category_id]", options_for_select(Category.all.map { |category| [category.name, category.id]}) %>
  </div><br>
  <div class="actions">
    <p align="left">
    <br>      
    <%= f.submit "Create post", :class=>'btn btn-primary' %>
    <%= link_to "Cancel" ,posts_path, :class=>'btn btn-primary' %>
    </p>
  </div>
<% end %>
