<div class="panel panel-default">
<div class="panel-body">
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control', :row => '3' %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control', :row => '3' %>
  </div>
  <% if @category.empty? %>
    <br>
    <div class="alert alert-danger" role="alert">
      <%= link_to "Warning! You must create a category post first.", new_category_path, :class => 'alert-link' %>
    </div>   
  <% end -%>

     <div class="field">
      <%= f.label :category_id %><br>
        <%= select_tag "post[category_id]", options_for_select(Category.all.map { |category| [category.name, category.id]}), :class => "form-control"%>
  </div><br />

  <div class="actions">
    <p align="left">      
    <%= f.submit "Create", :class=>'btn btn-primary' %>
    <%= link_to "Cancel" ,posts_path, :class=>'btn btn-primary' %>
    </p>
  </div>
<% end %>
</div>
</div>
