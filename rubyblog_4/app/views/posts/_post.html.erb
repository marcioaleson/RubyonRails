<p>
	<strong>Title:</strong>
	<%= post.title %>
</p>

<p>
	<strong>Body:</strong>
	<%= post.body %>
</p>

<p>
	<%= link_to 'Show', post, :class=>'btn btn-primary'  %>
	<%= link_to 'Edit', edit_post_path(post), :class=>'btn btn-primary'  %>
	<%= link_to 'Destroy post', [post.author, post], method: :delete, data: {confirm: 'Are you sure?'}, :class=>'btn btn-primary'  %>
</p>